<%= render 'shared/errors', object: @question %>

<%= form_with(model: @question) do |f| %>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <br>
  
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body, required: true, minlength: 2 %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>

  <div class='mb-3 row'>
    <div class='col-sm-2 col-form-label'>
      <%= f.label :tags %>
    </div>

    <div class='col-sm-10'>
      <%= f.collection_select :tag_ids, tags.nil? ? [] : tags, :id, :title, { prompt: 'Select tags' }, { multiple: true, class: 'js-multiple-select' } %>
    </div>
  </div>

  <div>
    <%= f.submit t('global.button.submit'), class: "btn btn-primary"  %>
  </div>

<% end %>
