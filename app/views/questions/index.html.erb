<div class='m-3'>
  <h1>Questions</h1>

  <%= link_to 'NEW Question', new_question_path %>
</div>
<hr>

<div class='m-3'>
  <% @questions.each do |question| %>

    <h2><%= question.title %></h2>

    <time datatime="<% question.formatted_created_at %>">
      <%= question.formatted_created_at %>
    </time>

    <p><%= question.body %></p>

    <%= link_to 'Edit', edit_question_path(question) %> |
    <%= link_to 'Show', question_path(question) %> |
    <%= link_to 'Delete', question_path(question), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>

  <% end %>
</div>