  <%= render 'shared/errors', object: @answer %>

  <%= form_with model: [@question, @answer] do |f| %>

    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <%= f.label :Body, required: true, minlength: 2 %>
      </div>

      <div class="col-sm-10">
        <%= f.text_area :body, class: 'form-control', required: true %>
      </div>
    </div>

    <article>
      <%= f.submit t('global.button.submit'), class: "btn btn-primary", data: { turbo: false } %>
    </div>

  <% end %>