<tr>
  <th scope='row'><%= user.id %></th>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.role %></td>
  <td><%= user.created_at %></td>
  <td><%= user.updated_at %></td>
  <td>
    <%= link_to t('global.button.edit'), edit_admin_user_path(user), class: "btn btn-secondary" %>
    <%= link_to t('global.button.destroy'), admin_user_path(user), data: {turbo_method: :delete, turbo_confirm: t('global.button.confirm') }, class: "btn btn-danger" %>
  </td>
</tr>


