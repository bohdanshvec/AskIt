<% provide :page_title, 'Admin Users' %>

<% currently_at('Users') %>

<h1 class="mb-4">Admin Users</h1>

<div class='mb-3'>
  <%= link_to 'NEW User', new_admin_user_path, class: "btn btn-primary"  %>
</div>

<div class='btn-group mb-3'>
  <%= link_to 'Download zipped XLSX', admin_users_path(format: :zip),
    class: 'btn btn-secondary' %>
</div>

<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>

<table class='table table-striped table-nover'>
  <thead>
    <tr>
      <th scope='col'>ID</th>
      <th scope='col'>Name</th>
      <th scope='col'>Email</th>
      <th scope='col'>Role</th>
      <th scope='col'>Created at</th>
      <th scope='col'>Updated at</th>
      <th></th>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>

<h2 class='mb-3'>Upload users from XLSX</h2>

<%= form_with url: admin_users_path do |f| %>
  <div class='mb-3 row'>
    <div class='col-sm-2 col-form-lable'>
      <%= f.label :archive, 'Select archive' %>
    </div>

    <div class='col-sm-10'>
      <%= f.file_field :archive, class: 'form-control' %>
    </div>
  </div>

    <%= f.submit 'Upload!', class: 'btn btn-primary' %>
<% end %>