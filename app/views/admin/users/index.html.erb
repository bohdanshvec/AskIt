<% provide :page_title, t('.title') %>

<% currently_at(t('menu.users')) %>

<h1 class="mb-4"><%= t('.title') %></h1>

<div class='mb-3'>
  <%= link_to t('.button_new_user'), new_admin_user_path, class: "btn btn-primary"  %>
</div>

<div class='btn-group mb-3'>
  <%= link_to t('.button_download'), admin_users_path(format: :zip),
    class: 'btn btn-secondary', data: { turbo_confirm: t('global.button.confirm') } %>
</div>

<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>

<table class='table table-striped table-nover'>
  <thead>
    <tr>
      <th scope='col'><%= t('.id') %></th>
      <th scope='col'><%= t('.name') %></th>
      <th scope='col'><%= t('.email') %></th>
      <th scope='col'><%= t('.role') %></th>
      <th scope='col'><%= t('.created_at') %></th>
      <th scope='col'><%= t('.update_at') %></th>
      <th></th>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>

<h2 class='mb-3'><%= t('.text') %></h2>

<%= form_with url: admin_users_path do |f| %>
  <div class='mb-3 row'>
    <div class='col-sm-2 col-form-lable'>
      <%= f.label :archive, t('.select_archive') %>
    </div>

    <div class='col-sm-10'>
      <%= f.file_field :archive, class: 'form-control' %>
    </div>
  </div>

    <%= f.submit t('.button_upload'), class: 'btn btn-primary' %>
<% end %>